
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>New review for <%= @restaurant.name %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">

      <%= simple_form_for [@restaurant, @review] do |f| %>

        <% if @review.errors.any? %>
          <div id="error_explanation">
            <ul>
            <% @review.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <%= f.input :content %>
        <%= f.input :rating %>
        <%= f.submit class: "btn btn-success" %>
      <% end %>

    </div>
  </div>
</div>
