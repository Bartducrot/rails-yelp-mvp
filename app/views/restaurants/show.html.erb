<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1> <%= @restaurant.name %> </h1>
      <p> <%= @restaurant.address %> </p>
      <p> <%= @restaurant.category.capitalize %> </p>
      <p> <%= @restaurant.phone_number %> </p>
      </div>
  </div>
  <div class="row">
    <% @restaurant.reviews.each do |review| %>
      <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
        <div class="card">
          <h3><%= review.content %></h3>
          <p><%= review.rating %></p>
        </div>
      </div>
    <% end %>
    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
      <div>
        <%= link_to "add a review for this restaurant", new_restaurant_review_path(@restaurant) , class: "btn btn-success" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <%= link_to "back to home page", restaurants_path , class: "btn btn-warning"%>
    </div>
  </div>
</div>
